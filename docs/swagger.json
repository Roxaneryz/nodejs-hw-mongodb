  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    },
    "schemas": {
      "contact": {
        "type": "object",
        "required": [
          "_id",
          "name",
          "email",
          "phoneNumber",
          "contactType"
        ],
        "properties": {
          "_id": {
            "type": "string",
            "description": "Contact id",
            "example": "66b2852753d615cb5cae2053"
          },
          "name": {
            "type": "string",
            "description": "Contact name",
            "example": "Yulia Shevchenko"
          },
          "phoneNumber": {
            "type": "string",
            "description": "Contact phone number",
            "example": "+380000000001"
          },
          "email": {
            "type": "string",
            "description": "Contact email",
            "example": "user-123@gmail.com"
          },
          "isFavourite": {
            "type": "boolean",
            "description": "When the contact is favourite",
            "default": false
          },
          "contactType": {
            "type": "string",
            "description": "Type of contact",
            "enum": [
              "work",
              "home",
              "personal"
            ],
            "example": "personal"
          },
          "userId": {
            "type": "string",
            "description": "Owner's id",
            "example": "66b2852753d615cb5cae2053"
          },
          "photo": {
            "type": "string",
            "description": "Contact's photo"
          }
        }
      },
      "user": {
        "type": "object",
        "required": [
          "name",
          "email",
          "password"
        ],
        "properties": {
          "_id": {
            "type": "string",
            "description": "User's id",
            "example": "ijk5i156748e4f8684151add5"
          },
          "name": {
            "type": "string",
            "description": "User's name",
            "example": "Marry White"
          },
          "email": {
            "type": "string",
            "description": "User's email",
            "example": "user-1233t@gmail.com"
          },
          "password": {
            "type": "string",
            "description": "Users's password",
            "example": "Marry123"
          }
        }
      }
    },
    "responses": {
      "400": {
        "description": "Bad Request",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": [
                "status",
                "message",
                "data"
              ],
              "properties": {
                "status": {
                  "type": "integer",
                  "example": 400
                },
                "message": {
                  "type": "string",
                  "example": "This endpoint returns a 400 Bad Request in case of an invalid request"
                },
                "data": {
                  "type": "object",
                  "required": [
                    "message",
                    "errors"
                  ],
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Bad request"
                    },
                    "errors": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      },
                      "example": "name is required"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "401": {
        "description": " Unauthorized error",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": [
                "status",
                "message",
                "data"
              ],
              "properties": {
                "status": {
                  "type": "integer",
                  "example": 401
                },
                "message": {
                  "type": "string",
                  "example": "Unauthorized Error"
                },
                "data": {
